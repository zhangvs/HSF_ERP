@model  HZSoft.Application.Entity.BaseManage.Hsf_CardEntity
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=0.25, maximum-scale=5.0, user-scalable=yes" />
    <!-- Set render engine for 360 browser -->
    <meta name="renderer" content="webkit" />
    <!-- No Baidu Siteapp-->
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <meta name="msapplication-TileColor" content="#0e90d2" />
    <link href="~/Content/styles/card/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="~/Content/styles/card/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/Content/styles/card/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Content/styles/card/AdminLTE.min.css" rel="stylesheet" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
    <link href="~/Content/styles/card/_all-skins.min.css" rel="stylesheet" />
    <style>
        .list-group-unbordered li {
            border: none;
        }

        .list-item-padding {
            padding-left: 18px !important;
            border-bottom: 2px solid #ebc3a4 !important;
        }

        .list-group-item img {
            height: 25px;
            margin-right: 6px;
        }

        .navbar-bg {
            background: #FFF url(/Content/images/card/mid_img.jpg) center top;
            filter: "progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod='scale')";
            -moz-background-size: 100% 100%;
            background-size: 100% 100%;
            height: 130px;
        }

            /*.navbar-bg img {
                max-width: 100%;
                height: auto;
                width: auto;
            }*/

            .navbar-bg .navbar-item {
                color: white !important;
                padding-left: 32px;
                padding-top: 10px;
            }

                .navbar-bg .navbar-item .navbar-item-small {
                    font-size: 14px;
                }

                .navbar-bg .navbar-item .navbar-item-big {
                    font-size: 1.15em;
                }

        .widget-user-header-bg {
            background: #FFF url(/Content/images/card/cardtop.jpg) center top;
            filter: "progid:DXImageTransform.Microsoft.AlphaImageLoader(sizingMethod='scale')";
            -moz-background-size: 100% 100%;
            background-size: 125% 125%;
            height: 235px !important;
        }

        .widget-user-image {
            top: 175px !important;
            margin-left: -55px !important;
        }

        .widget-user .widget-user-image > img {
            width: 110px;
            height: 110px;
            border: 3px solid #fff;
        }

        .img-qc {
            width: 250px;
            max-width: 75%;
        }

        .imge_zeji {
            width: 60%;
            margin: 0 auto;
            text-align: center;
            position: absolute;
            top: 0px;
            left: 20%;
        }

            .imge_zeji img {
                width: 40px;
                height: 63px;
            }

        @@media (max-width: 768px) {
            .login-box {
                width: 100%;
                margin-top: 0% !important;
                margin-bottom: 0% !important;
            }
        }

        .pinpai-info {
            font-family: 微软雅黑;
            background-color: #cc1f19;
            color: white;
            height: 30px;
            width: 230px;
            text-align: center;
            padding-top: 5px;
            border-top-left-radius: 7px;
            border-top-right-radius: 7px;
        }
        /*iphone 4/5*/
        @@media (max-width: 321px) {
            .navbar-bg {
                height: 120px;
            }

                .navbar-bg .navbar-item {
                    color: white !important;
                    padding-left: 18px;
                    padding-top: 10px;
                }

                    .navbar-bg .navbar-item .navbar-item-small {
                        font-size: 9px;
                    }

                    .navbar-bg .navbar-item .navbar-item-big {
                        font-size: 1.15em;
                    }
        }
    </style>
    <title>
        @Model.Name 的电子名片
    </title>
</head>
<body class="layout-boxed login-page">
    <form name="form1" method="post" action="card.aspx" id="form1">
        <div>
            <input type="hidden" name="__VIEWSTATE" id="__VIEWSTATE" value="/wEPDwUKLTM0MTM0MzA0NWRko9tdNYWvFo/EGCYtIpA7ax2oiP8=" />
        </div>

        <div>
            <input type="hidden" name="__VIEWSTATEGENERATOR" id="__VIEWSTATEGENERATOR" value="CB3A884A" />
        </div>
        @*<div class="logo_content" style="display: none">
                <img src="~/Content/images/icon/logo.jpg" />
            </div>*@
        <div class="login-box">
            <div class="box box-widget widget-user no-margin">
                <div class="widget-user-header bg-black widget-user-header-bg">

                    <div class="text-center center-block" style="margin-top: 0px;">
                        @*<div class="imge_zeji">
                                <img src="~/Content/images/icon/logo.jpg" />
                            </div>
                            <div style="font-family: 微软雅黑; font-size: 1em; color: #ffffff; position: absolute; right: 20px; top: 20px;">
                                <a style="color: #ffffff;" href="http://yijinglijia.com/leader/wx/card-en.aspx">EN</a>
                                <a style="color: #ffffff; margin-left: 10px;" href="http://yijinglijia.com/leader/wx/card-ru.aspx">RU</a>
                            </div>*@
                        <div style="font-family: 微软雅黑; font-size: 2.35em; width: 60%; margin: 0 auto; text-align: center; margin-top: 40px;">
                            @Model.Name
                        </div>
                        <div style="font-family: 微软雅黑; font-size: 1em; font-weight: bold; width: 60%; margin: 0 auto; text-align: center">@Model.NameEn</div>

                        <div style="font-family: 微软雅黑; font-size: 0.75em; padding: 3px 15px; border-radius: 10px; background-color: #cc1f19; width: 60%; margin: 0 auto; text-align: center;">
                            <div style="display: block">@Model.CompanyName </div>
                            <div style="display: block">@Model.Position</div>
                        </div>
                    </div>
                </div>
                <div class="widget-user-image">
                    <img id="cphMain_imgAvatar" class="img-circle" src="@Model.PhotoUrl" />
                </div>
                <div class="box-body no-padding" style="padding-bottom: 0px!important;">
                    <ul class="list-group list-group-unbordered" style="margin: 60px 20px 6px 20px; border-top: none; font-size: 1.15em;">
                        <li class="list-group-item" style="border-top: none;padding-bottom:0px;border-bottom:2px solid #ebc3a4">
                            <div class="pinpai-info">
                                <span>山东韩宇来企业集团 旗下品牌</span>
                            </div>
                        </li>
                        <li class="list-group-item" style="border-bottom:2px solid #ebc3a4">
                            <img src="~/Content/images/card/card_pinpai.gif" style="max-width: 100%; height: auto; width: auto;" />
                            @*<img src="~/Content/images/card/logo_all.jpg" style="max-width: 100%; height: auto; width: auto;" />*@

                        </li>
                        @if (!string.IsNullOrEmpty(Model.Mobile1))
                        {
                            <li class="list-group-item list-item-padding">
                                <a class="padding-left">
                                    <img src="~/Content/images/card/06.png" class="img-circle">
                                </a>
                                <div style="padding-left: 33.8843px; margin-top: -1.45em;">
                                    <a class="padding-left"></a>
                                    <div style="line-height: 1.5em;">
                                        <a class="padding-left"></a><a id="cphMain_rMobile_hlMobile_1" href="tel:@Model.Mobile1">@Model.Mobile1</a>
                                    </div>
                                </div>
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.Mobile2))
                        {
                            <li class="list-group-item list-item-padding">
                                <a class="padding-left">
                                    <img src="~/Content/images/card/06.png" class="img-circle">
                                </a>
                                <div style="padding-left: 33.8843px; margin-top: -1.45em;">
                                    <a class="padding-left"></a>
                                    <div style="line-height: 1.5em;">
                                        <a class="padding-left"></a><a id="cphMain_rMobile_hlMobile_1" href="tel:@Model.Mobile2">@Model.Mobile2</a>
                                    </div>
                                </div>
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.Telephone))
                        {
                            <li class="list-group-item list-item-padding">
                                <a class="padding-left">
                                    <img src="~/Content/images/card/01.png" class="img-circle">
                                </a>
                                <div style="padding-left: 33.8843px; margin-top: -1.45em;">
                                    <a class="padding-left"></a><a id="cphMain_rMobile_hlMobile_0" href="tel:@Model.Telephone">@Model.Telephone</a>
                                </div>
                            </li>
                        }
                        @if (!string.IsNullOrEmpty(Model.Fax))
                        {
                            <li class="list-group-item list-item-padding">
                                <a class="padding-left">
                                    <img src="~/Content/images/card/01-2.png" class="img-circle">
                                </a>
                                <div style="padding-left: 33.8843px; margin-top: -1.45em;">
                                    <a class="padding-left"></a><a id="cphMain_rMobile_hlMobile_0" href="tel:@Model.Fax">@Model.Fax</a>
                                </div>
                            </li>
                        }

                        @if (!string.IsNullOrEmpty(Model.Email))
                        {
                            <li class="list-group-item list-item-padding">
                                <a class="padding-left">
                                    <img src="~/Content/images/card/02-2.png" class="img-circle">
                                </a>
                                <div style="padding-left: 33.8843px; margin-top: -1.45em;">
                                    <a class="padding-left"></a>
                                    <div style="line-height: 1.5em;">
                                        <a class="padding-left"></a><a id="A2" href="@Model.Email">@Model.Email</a>
                                    </div>
                                </div>
                            </li>
                        }

                        @if (!string.IsNullOrEmpty(Model.Address))
                        {
                            <li class="list-group-item list-item-padding" style="border-bottom: none;">
                                <a class="padding-left">
                                    <img src="~/Content/images/card/03.png" class="img-circle">
                                    <div style="padding-left: 33.8843px; margin-top: -1.45em;">
                                        @Model.Address
                                    </div>
                                </a>
                            </li>
                        }

                        @if (!string.IsNullOrEmpty(Model.Website))
                        {
                            <li class="list-group-item" style="border-bottom:1px solid #ebc3a4;padding-left:18px !important;">
                                <a class="padding-left">
                                    <img src="~/Content/images/card/web.png" class="img-circle">
                                </a>
                                <div style="padding-left: 33.8843px; margin-top: -1.45em;">
                                    <a class="padding-left"></a>
                                    <div style="line-height: 1.5em;">
                                        <a class="padding-left"></a><a id="A3" href="@Model.Website">@Model.Website</a>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                    <div class="navbar-bg">
                        <div class="navbar-item">
                            <div class="navbar-item-big">企业理念</div>
                            <div class="navbar-item-small">
                                <span>和衷共济&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                <span>和力共创&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                <span>和弦共鸣&nbsp;&nbsp;&nbsp;&nbsp;</span>
                                <span>和谐共享&nbsp;&nbsp;&nbsp;&nbsp;</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="box-footer text-center thumbnail no-border" style="margin: 20px 0 10px 0; padding-top: 10px !important;">
                    <img id="cphMain_imgQC" class="img-qc" src="~/Content/images/card/weixin-Hsf.jpg">
                    <div style="color: #cc1f19; font-size: 12px;">
                        <span>@Model.CompanyName</span>
                    </div>
                </div>
                <div id="cphMain_dvAddAddress" class="box-body text-center ">
                    <button type="button" class="btn btn-success margin-bottom" data-toggle="modal" data-target="#mdlCard"
                            style="width: 320px; max-width: 65%; background-color: #cd1112; border-color: #cd1112">
                        <i class="fa fa-plus margin-r-5"></i>添加到通讯录
                    </button>
                </div>
            </div>
        </div>
        <div class="modal text-middle fade" id="mdlCard" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close btn btn-default" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                        <h4 class="modal-title">添加到通讯录</h4>
                    </div>
                    <div class="modal-body" style="text-align: center; padding-top: 5px; padding-bottom: 5px;">
                        <img id="cphMain_imgQcCodeVCF" src="@Model.QRcodeUrl" style="width: 250px;" />
                    </div>
                    <div class="modal-footer" style="margin: 0 auto; text-align: center;">
                        <div class="pull-left">
                            <div class="text-sm">长按二维码，选择识别图中二维码</div>
                            <div class="text-sm">技术支持：@Model.CompanyName</div>
                        </div>
                        <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- jQuery 2.2.3 -->
    @*<script src="~/Content/scripts/card/jquery-2.2.3.min.js"></script>*@
    <script src="~/Content/scripts/jquery/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Content/scripts/bootstrap/bootstrap.min.js"></script>
    @*<script src="~/Content/scripts/card/bootstrap.min.js"></script>*@
    <!-- FastClick -->
    <script src="~/Content/scripts/card/fastclick.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/scripts/card/app.min.js"></script>

    <!--分享-->
    @{Html.RenderAction("_PartialShare", "Card", new { cardId = Model.Id, cardName = Model.Name, photoUrl = Model.PhotoUrl });}
    <!--end分享-->
</body>
</html>
