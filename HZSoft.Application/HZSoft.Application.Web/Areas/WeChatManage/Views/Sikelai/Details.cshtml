@model  HZSoft.Application.Entity.CustomerManage.Poll_SignUpEntity
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1, user-scalable=no">
    <title>思科莱“生活设计家”</title>
    <link href="~/Content/styles/hsf/base.css" rel="stylesheet" />
    <link href="~/Content/styles/hsf/details.css" rel="stylesheet" />
</head>
<body>
    <div class="skl_containers">
        <div class="skl_open">
            <div class="jd_banner">
                <ul>
                    <li><img src="@Model.Pic1" /></li>
                    <li><img src="@Model.Pic2" /></li>
                    <li><img src="@Model.Pic3" /></li>
                    <li><img src="@Model.Pic4" /></li>
                </ul>
                <ul>
                    <li class="now"></li>
                    <li></li>
                    <li></li>
                    <li></li>
                </ul>
            </div>
            <div class="skl_open_text">
                <span class="skl_open_text_No">@Model.Id</span>
                <span class="skl_open_text_Name">@Model.FullName</span>
                <span class="skl_open_text_Piao">@Model.PollCount 票</span>
            </div>
            <p>@Model.Description</p>
            <p class="skl_open_Tou">
                <span><a href="~/WeChatManage/Sikelai/PollSave?id=@Model.Id&name=@Model.FullName"> <img src="/Content/images/icon/心型填充.png" />给Ta投票</a></span>
                <span><a onclick="document.getElementById('mcover').style.display='block';"> <img src="/Content/images/icon/拉票图标.png" />为Ta拉票</a></span>
            </p>
        </div>
        <!--导航-->
        <div class="skl_nav">
            <ul class="clearfix">
                <li>
                    <a href="~/WeChatManage/Sikelai/Index">
                        <img src="~/Content/images/icon/首页白.png" />
                        <p>首页</p>
                    </a>
                </li>
                <li>
                    <a href="~/WeChatManage/Sikelai/SignUp">
                        <img src="~/Content/images/icon/报名白.png" />
                        <p>报名</p>
                    </a>
                </li>
                <li>
                    <a href="~/WeChatManage/Sikelai/Search">
                        <img src="~/Content/images/icon/搜索图标.png" />
                        <p>搜索</p>
                    </a>
                </li>
                <li>
                    <a href="~/WeChatManage/Sikelai/Top?groupId=1">
                        <img src="~/Content/images/icon/排行白.png" />
                        <p>排行</p>
                    </a>
                </li>
                <li>
                    <a href="~/WeChatManage/Sikelai/Rule">
                        <img src="~/Content/images/icon/规则白.png" />
                        <p>规则</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <script src="~/Content/scripts/hsf/details.js"></script>
    <!--分享-->
    @{Html.RenderAction("_PartialShare", "Sikelai", new { playerId = @Model.Id, playerName = @Model.FullName });}
    <!--end分享-->
</body>
</html>
