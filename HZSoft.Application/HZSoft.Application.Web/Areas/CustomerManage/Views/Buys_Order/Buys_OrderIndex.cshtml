@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>
    ;
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 136.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var queryJson = {};
        queryJson.OverMark = 0;

        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            postData: { queryJson: JSON.stringify(queryJson) },
            height: $(window).height() - 156.5,
            url: "../../CustomerManage/Buys_Order/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'Id', hidden: true },
                { label: '单号', name: 'Code', index: 'Code', width: 130, align: 'left', sortable: true },
                { label: '标题', name: 'OrderTitle', index: 'OrderTitle', width: 130, align: 'left', sortable: true },
                { label: '经销商', name: 'CompanyName', index: 'CompanyName', width: 130, align: 'center', sortable: true },
                { label: '客户', name: 'CustomerName', index: 'CustomerName', width: 130, align: 'center', sortable: true },
                { label: '销售人', name: 'SalesmanUserName', index: 'SalesmanUserName', width: 80, align: 'center', sortable: true },
                { label: "总包数", name: "TotalQty", width: 80, align: "center" },
                { label: '创建日期', name: 'CreateDate', index: 'CreateDate', width: 118, align: 'left', sortable: true },
                {
                    label: "柜体入库", name: "GuiEnterMark", index: "GuiEnterMark", width: 80, align: "center", sortable: false,
                    formatter: function (cellvalue) {
                        if (cellvalue == 0) {
                            return "包装中";
                        } else if (cellvalue == 1) {
                            return "<i class=\"fa fa-toggle-on\"></i>";
                        } else {
                            return "";
                        }
                    }
                },
                {
                    label: "门板入库", name: "MenEnterMark", index: "MenEnterMark", width: 80, align: "center", sortable: false,
                    formatter: function (cellvalue) {
                        if (cellvalue == 0) {
                            return "<i class=\"fa fa-toggle-off\"></i>";
                        } else if (cellvalue == 1) {
                            return "<i class=\"fa fa-toggle-on\"></i>";
                        } else {
                            return "";
                        }
                    }
                },
                {
                    label: "五金入库", name: "WuEnterMark", index: "WuEnterMark", width: 80, align: "center", sortable: false,
                    formatter: function (cellvalue) {
                        if (cellvalue == 0) {
                            return "<i class=\"fa fa-toggle-off\"></i>";
                        } else if (cellvalue == 1) {
                            return "<i class=\"fa fa-toggle-on\"></i>";
                        } else {
                            return "";
                        }
                    }
                },
                {
                    label: "全部入库", name: "AllEnterMark", index: "AllEnterMark", width: 80, align: "center", sortable: false,
                    formatter: function (cellvalue) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                {
                    label: "尾款", name: "PaymentState", index: "PaymentState", width: 80, align: "center", sortable: false,
                    formatter: function (cellvalue) {
                        return cellvalue == 3 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                { label: '付款日期', name: 'PaymentDate', index: 'PaymentDate', width: 118, align: 'left', sortable: true },
                { label: "计划发货日期", name: "SendPlanDate", width: 100, align: "center", formatter: "date", formatoptions: { newformat: 'Y-m-d' } },
                {
                    label: "发货", name: "SendMark", index: "SendMark", width: 80, align: "center", sortable: false,
                    formatter: function (cellvalue) {
                        return cellvalue == 1 ? "<i class=\"fa fa-toggle-on\"></i>" : "<i class=\"fa fa-toggle-off\"></i>";
                    }
                },
                { label: '发货日期', name: 'SendDate', index: 'SendDate', width: 118, align: 'left', sortable: true },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            ondblClickRow: function () {
                btn_detail();
            },
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            },
            footerrow: true,
            gridComplete: function () {
                var total1 = $(this).getCol("TotalQty", false, "sum");
                //合计面积
                $(this).footerData("set", {
                    "CustomerName": "合计：",
                    "TotalQty": total1,
                });
                $('table.ui-jqgrid-ftable td').prevUntil().css("border-right-color", "#fff");
            },
            subGrid: true,
            subGridRowExpanded: function (subgrid_id, row_id) {
                var keyValue = $gridTable.jqGrid('getRowData', row_id)['Id'];
                var subgrid_table_id = subgrid_id + "_t";
                $("#" + subgrid_id).html("<table id='" + subgrid_table_id + "'></table>");
                $("#" + subgrid_table_id).jqGrid({
                    url: "../../CustomerManage/Buys_Order/GetDetailsJson",
                    postData: { keyValue: keyValue },
                    datatype: "json",
                    height: "100%",
                    colModel: [
                        { label: '商品名称', name: "ProductName", width: 200, align: 'left' },
                        { label: '商品单号', name: "ProductCode", width: 100, align: 'center' },
                        { label: '单位', name: "Unit", width: 100, align: 'center' },
                        { label: '数量', name: 'Qty', width: 80, align: 'center', formatter: 'number', formatoptions: { thousandsSeparator: "", decimalPlaces: 2 } },
                        { label: '入库人', name: 'CreateItemUserName', width: 80, align: 'center' },
                        { label: '入库日期', name: 'CreateItemDate', width: 118, align: 'left' }
                    ],
                    caption: "明细",
                    rowNum: "1000",
                    rownumbers: true,
                    shrinkToFit: false,
                    gridview: true,
                    hidegrid: false
                });
            }
        });

        //点击时间范围（今天、近7天、近一个月、近三个月）
        $("#time_horizon a.btn-default").click(function () {
            $("#time_horizon a.btn-default").removeClass("active");
            $(this).addClass("active");
            switch ($(this).attr('data-value')) {
                case "1"://今天
                    $("#StartTime").val("@DateTime.Now.ToString("yyyy-MM-dd")");
                    $("#EndTime").val("@DateTime.Now.ToString("yyyy-MM-dd")");
                    break;
                case "2"://近7天
                    $("#StartTime").val("@DateTime.Now.AddDays(-7).ToString("yyyy-MM-dd")");
                    $("#EndTime").val("@DateTime.Now.ToString("yyyy-MM-dd")");
                    break;
                case "3"://近一个月
                    $("#StartTime").val("@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")");
                    $("#EndTime").val("@DateTime.Now.ToString("yyyy-MM-dd")");
                    break;
                case "4"://近三个月
                    $("#StartTime").val("@DateTime.Now.AddMonths(-3).ToString("yyyy-MM-dd")");
                    $("#EndTime").val("@DateTime.Now.ToString("yyyy-MM-dd")");
                    break;
                default:
                    break;
            }
            $("#SelectedStartTime").html($("#StartTime").val());
            $("#SelectedEndTime").html($("#EndTime").val());
            $('#btn_Search').trigger("click");
        });
        //查询点击事件
        $("#btn_Search").click(function () {
            if (!$(".ui-filter-text").next('.ui-filter-list').is(":hidden")) {
                $(".ui-filter-text").trigger("click");
            }
            $("#SelectedStartTime").html($("#StartTime").val());
            $("#SelectedEndTime").html($("#EndTime").val());
            var queryJson = $("#filter-form").GetWebControls();
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) },
                page: 1
            }).trigger('reloadGrid');
        });
    }
    //新增
    function btn_add() {
        top.tablist.newTab({
            id: "OrderForm",
            title: "新增订单",
            closed: true,
            replace: true,
            icon: "fa fa-file-text-o",
            url: top.contentPath + "/CustomerManage/Buys_Order/Buys_OrderForm"
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue('Id');
        if (checkedRow(keyValue)) {
            top.tablist.newTab({
                id: "OrderForm",
                title: "编辑订单",
                closed: true,
                replace: true,
                icon: "fa fa-file-text-o",
                url: top.contentPath + "/CustomerManage/Buys_Order/Buys_OrderForm?keyValue=" + keyValue
            });
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue('Id');
        if (keyValue) {
            $.RemoveForm({
                url: '../../CustomerManage/Buys_Order/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的进货单！', 0);
        }
    }
    //详细
    function btn_detail() {
        var keyValue = $("#gridTable").jqGridRowValue('Id');
        if (checkedRow(keyValue)) {
            top.tablist.newTab({
                id: "OrderForm",
                title: "订单详细",
                closed: true,
                replace: true,
                icon: "fa fa-file-text-o",
                url: top.contentPath + "/CustomerManage/Buys_Order/Detail?keyValue=" + keyValue
            });
        }
    }
    //导出
    function btn_export() {
        dialogOpen({
            id: "ExcelIExportDialog",
            title: '入库单',
            url: '/Utility/ExcelExportForm?gridId=gridTable&filename=入库单',
            width: "500px",
            height: "380px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }, btn: ['导出Excel', '关闭']
        });
    }


    //柜体入库
    function btn_Gui() {
        var keyValue = $('#gridTable').jqGridRowValue('Id');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'InGuiForm',
                title: '柜体入库',
                url: '/CustomerManage/Buys_Order/InGuiForm?keyValue=' + keyValue,
                width: '250px',
                height: '200px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //门板入库
    function btn_Men() {
        var keyValue = $('#gridTable').jqGridRowValue('Id');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'InMenForm',
                title: '门板入库',
                url: '/CustomerManage/Buys_Order/InMenForm?keyValue=' + keyValue,
                width: '250px',
                height: '200px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //五金入库
    function btn_Wu() {
        var keyValue = $('#gridTable').jqGridRowValue('Id');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'InWuForm',
                title: '五金入库',
                url: '/CustomerManage/Buys_Order/InWuForm?keyValue=' + keyValue,
                width: '250px',
                height: '200px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //外协入库
    function btn_Wu() {
        var keyValue = $('#gridTable').jqGridRowValue('Id');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'InWaiForm',
                title: '外协入库',
                url: '/CustomerManage/Buys_Order/InWaiForm?keyValue=' + keyValue,
                width: '250px',
                height: '200px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td>查询条件</td>
                <td style="padding-left: 10px;">
                    <div class="ui-filter" style="width: 200px;">
                        <div class="ui-filter-text">
                            <strong id="SelectedStartTime">@DateTime.Now.AddDays(-7).ToString("yyyy-MM-dd")</strong> 至 <strong id="SelectedEndTime">@DateTime.Now.ToString("yyyy-MM-dd")</strong>
                        </div>
                        <div class="ui-filter-list" style="width: 350px;">
                            <table class="form" id="filter-form">
                                <tr>
                                    <th class="formTitle">单据日期：</th>
                                    <td class="formValue">
                                        <input id="Category" type="hidden" value="1" />
                                        <div style="float: left; width: 45%;">
                                            <input id="StartTime" readonly type="text" value="@DateTime.Now.AddMonths(-1).ToString("yyyy-MM-dd")" class="form-control input-wdatepicker" onfocus="WdatePicker({maxDate:'%y-%M-%d'})">
                                        </div>
                                        <div style="float: left; width: 10%; text-align: center;">至</div>
                                        <div style="float: left; width: 45%;">
                                            <input id="EndTime" readonly type="text" value="@HZSoft.Util.Time.GetToday()" class="form-control input-wdatepicker" onfocus="WdatePicker({maxDate:'%y-%M-%d'})">
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td class="formTitle">入库单：</td>
                                    <td class="formValue">
                                        <input id="Code" type="text" class="form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td class="formTitle">生产单：</td>
                                    <td class="formValue">
                                        <input id="ProduceCode" type="text" class="form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td class="formTitle">销售单：</td>
                                    <td class="formValue">
                                        <input id="OrderCode" type="text" class="form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td class="formTitle">经销商：</td>
                                    <td class="formValue">
                                        <input id="CompanyName" type="text" class="form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td class="formTitle">客户：</td>
                                    <td class="formValue">
                                        <input id="CustomerName" type="text" class="form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td class="formTitle">销售：</td>
                                    <td class="formValue">
                                        <input id="SalesmanUserName" type="text" class="form-control">
                                    </td>
                                </tr>
                            </table>
                            <div class="ui-filter-list-bottom">
                                <a id="btn_Search" class="btn btn-primary">&nbsp;查&nbsp;&nbsp;询</a>
                            </div>
                        </div>
                    </div>
                </td>
                <td style="padding-left: 10px;">
                    <div id="time_horizon" class="btn-group">
                        <a class="btn btn-default" data-value="1">今天</a>
                        <a class="btn btn-default" data-value="2">近7天</a>
                        <a class="btn btn-default active" data-value="3">近1个月</a>
                        <a class="btn btn-default" data-value="4">近3个月</a>
                    </div>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>刷新</a>
            @*<a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>新增</a>*@
            <a id="lr-edit" class="btn btn-default" onclick="btn_Gui()"><i class="fa fa-pencil-square-o"></i>柜体入库</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_Men()"><i class="fa fa-pencil-square-o"></i>门板入库</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_Wu()"><i class="fa fa-pencil-square-o"></i>五金入库</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_Wai()"><i class="fa fa-pencil-square-o"></i>外协入库</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>删除</a>
            <a id="lr-detail" class="btn btn-default" onclick="btn_detail()"><i class="fa fa-print"></i>打印</a>
            <a id="lr-export" class="btn btn-default" onclick="btn_export()"><i class="fa fa-sign-out"></i>导出</a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
