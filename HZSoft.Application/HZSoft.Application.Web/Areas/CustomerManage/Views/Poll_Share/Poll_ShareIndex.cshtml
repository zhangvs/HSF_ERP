@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>;
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 136.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../CustomerManage/Poll_Share/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: '主键', name: 'Id', index: 'Id', hidden: true },
                { label: '分享人昵称', name: 'NickName', index: 'NickName', width: 100, align: 'left', sortable: true },
                {
                    label: "分享人头像", name: "HeadimgUrl", index: "HeadimgUrl", width: 80, align: "center", sortable: false,
                    formatter: function (cellvalue) {
                        if (typeof (cellvalue) != "undefined" && cellvalue != "") {
                            return "<img src='" + cellvalue + "' height='50px' width='50px'/>";
                        } else {
                            return '';
                        }
                    }
                },
                { label: '分享标题', name: 'ShareTitle', index: 'ShareTitle', width: 100, align: 'center', sortable: true },
                { label: '分享到哪里', name: 'ShareTo', index: 'ShareTo', width: 100, align: 'center',sortable: true  },
                { label: '选手编号', name: 'PlayerId', index: 'PlayerId', width: 100, align: 'center',sortable: true  },
                { label: '选手姓名', name: 'PlayerName', index: 'PlayerName', width: 100, align: 'center',sortable: true  },
                { label: '分享时间', name: 'CreateDate', index: 'CreateDate', width: 100, align: 'left',sortable: true  },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            },
            ondblClickRow: function () {
                btn_edit();
            },
        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {
                keyword: $("#txt_Keyword").val()
            }
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加分享记录',
            url: '/CustomerManage/Poll_Share/Poll_ShareForm',
            width: '500px',
            height: '500px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue( 'Id');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑分享记录',
                url: '/CustomerManage/Poll_Share/Poll_ShareForm?keyValue=' + keyValue,
                width: '500px',
                height: '500px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue( 'Id');
        if (keyValue) {
            $.RemoveForm({
                url: '../../CustomerManage/Poll_Share/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的分享记录！', 0);
        }
    }
</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td>
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入选手编号或姓名" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
