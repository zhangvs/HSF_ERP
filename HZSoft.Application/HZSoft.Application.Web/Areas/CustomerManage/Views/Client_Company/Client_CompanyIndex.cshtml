@{;
    ViewBag.Title = "列表页面";
    Layout = "~/Views/Shared/_Index.cshtml";
}
<script>;
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设布局;
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $('#gridTable').setGridHeight($(window).height() - 136.5);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $('#gridTable');
        $gridTable.jqGrid({
            autowidth: true,
            height: $(window).height() - 136.5,
            url: "../../CustomerManage/Client_Company/GetPageListJson",
            datatype: "json",
            colModel: [
                { label: '经销商主键', name: 'CompanyId', index: 'CompanyId', width: 100, align: 'left', sortable: true, hidden: true },
                { label: '经销商编号', name: 'EnCode', index: 'EnCode', width: 100, align: 'left', sortable: true },
                { label: '经销商名称', name: 'FullName', index: 'FullName', width: 200, align: 'left',sortable: true  },
                { label: '联系人', name: 'Contact', index: 'Contact', width: 100, align: 'left', sortable: true },
                { label: '手机', name: 'Mobile', index: 'Mobile', width: 120, align: 'left', sortable: true },
                { label: '电话', name: 'Tel', index: 'Tel', width: 120, align: 'left', sortable: true },
                { label: '创建用户', name: 'CreateUserName', index: 'CreateUserName', width: 100, align: 'left', sortable: true },
                { label: '创建日期', name: 'CreateDate', index: 'CreateDate', width: 130, align: 'left', sortable: true, formatter: "date", formatoptions: { srcformat: 'Y-m-d H:i', newformat: 'Y-m-d H:i' } },
                { label: '备注', name: 'Description', index: 'Description', width: 200, align: 'left', sortable: true },
            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100],
            pager: "#gridPager",
            sortname: 'CreateDate',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true,
            onSelectRow: function () {
                selectedRowIndex = $('#' + this.id).getGridParam('selrow');
            },
            gridComplete: function () {
                $('#' + this.id).setSelection(selectedRowIndex, false);
            }
        });
    }
    //新增
    function btn_add() {
        dialogOpen({
            id: 'Form',
            title: '添加经销商',
            url: '/CustomerManage/Client_Company/Client_CompanyForm',
            width: '750px',
            height: '550px',
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }
    //编辑
    function btn_edit() {
        var keyValue = $('#gridTable').jqGridRowValue( 'CompanyId');
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: 'Form',
                title: '编辑经销商',
                url: '/CustomerManage/Client_Company/Client_CompanyForm?keyValue=' + keyValue,
                width: '750px',
                height: '550px',
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            })
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $('#gridTable').jqGridRowValue( 'CompanyId');
        if (keyValue) {
            $.RemoveForm({
                url: '../../CustomerManage/Client_Company/RemoveForm',
                param: { keyValue: keyValue },
                success: function (data) {
                    $('#gridTable').trigger('reloadGrid');
                }
            })
        } else {
            dialogMsg('请选择需要删除的经销商！', 0);
        }
    }
    //跟进记录
    function btn_chancetrail() {
        var keyValue = $("#gridTable").jqGridRowValue('CompanyId');
        var fullName = $("#gridTable").jqGridRowValue('FullName');
        if (keyValue) {
            dialogOpen({
                id: 'ChanceTrailIndex',
                title: fullName + ' - 跟进记录',
                url: '/CustomerManage/TrailRecord/Index?objectId=' + keyValue + '&objectSort=3',
                width: '750px',
                height: '550px',
                btn: null
            });
        } else {
            dialogMsg('请选择商机信息！', 0);
        }
    }
</script>
<div class="titlePanel">
    <div class="title-search">
        <table>
            <tr>
                <td>
                    <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="width: 200px;" />
                </td>
                <td style="padding-left: 5px;">
                    <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>查询</a>
                </td>
            </tr>
        </table>
    </div>
    <div class="toolbar">
        <div class="btn-group">
            <a id="lr-replace" class="btn btn-default" onclick="reload()"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
            <a id="lr-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新增</a>
            <a id="lr-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
            <a id="lr-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
        </div>
        <div class="btn-group">
            <a id="lr-chancetrail" class="btn btn-default" onclick="btn_chancetrail()"><i class="fa fa-clock-o"></i>&nbsp;跟进记录</a>
        </div>
    </div>
</div>
<div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager"></div>
</div>
